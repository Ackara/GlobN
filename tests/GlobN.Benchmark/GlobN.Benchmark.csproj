<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>GlobN.Benchmark</AssemblyName>
    <RootNamespace>Acklann.GlobN</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="fileList.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="fileList.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="benchmarkdotnet" Version="0.10.12" />
    <PackageReference Include="dotnet.glob" Version="1.6.9" />
    <PackageReference Include="glob" Version="0.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\GlobN\GlobN.csproj" />
  </ItemGroup>

</Project>
